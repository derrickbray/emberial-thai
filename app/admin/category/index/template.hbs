{{outlet}}
<div class="container">
  <div class="grid">
    <div class="grid__left full-width">
      <h2 class="card__title">Categories</h2>
      <div class="card">

          <form class="admin__cat-form" {{action "saveForm" category on="submit"}}>
            {{input class="admin__cat-input" type="text" placeholder="Category" value=category}}
            <button class="admin__cat-btn" type="submit" name="button">Add New</button>
          </form>


        <div class="card__item">
          <div class="admin__title">Name</div>
            <div class="admin__result">
              <h2 class="admin__result--title">new food</h2>
              <div class="admin__result--link">{{#link-to "admin"}}Details{{/link-to}}</div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
